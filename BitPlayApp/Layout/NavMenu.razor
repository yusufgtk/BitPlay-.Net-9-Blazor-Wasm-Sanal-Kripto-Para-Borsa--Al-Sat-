<nav class="navbar navbar-expand-lg bg-dark">
    <div class="container">
        <a class="navbar-brand text-warning fs-4" href="/"><span class="fw-bolder">Bit</span>Play</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
            <div>
                <ul class ="navbar-nav">
                    <li class="nav-item"></li>
                    <li class="nav-item p-0 m-0 d-flex align-items-center">
                        <NavLink class="nav-link " href="/" Match="NavLinkMatch.All">
                            <i class="fa-brands fa-bitcoin me-1 text-white"></i><span class="text-white">Al-Sat</span>
                        </NavLink>
                    </li>
                </ul>
            </div>
            <div>
                <ul class="navbar-nav">
                    
                    <li class="nav-item p-0 m-0 me-3 d-flex align-items-center">
                        <div>
                            @if (StateManager.ThemeColor == "bg-light")
                            {
                                <button class="btn sm-btn btn-dark p-1" @onclick="action"><i class="fa-regular fa-sun me-1"></i><span>Açık Tema</span></button>

                            }
                            else
                            {
                                <button class="btn sm-btn btn-light p-1" @onclick="action"><i class="fa-regular fa-moon me-1"></i><span>Koyu Tema</span></button>
                            }
                        </div>
                    </li>
                    @if (AccountModel?.UserEmail is null)
                    {
                        <li class="nav-item p-0 m-0 d-flex align-items-center">
                            <NavLink class="nav-link" href="login">
                                <i class="fa-solid fa-right-to-bracket text-white"></i>
                            </NavLink>
                        </li>

                        <li class="nav-item p-0 m-0 d-flex align-items-center">
                            <NavLink class="nav-link" href="register">
                                <i class="fa-solid fa-user-plus text-white"></i>
                            </NavLink>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown p-0 m-0 me-2 d-flex align-items-center text-white">
                            <TransactionBookComponent></TransactionBookComponent>
                        </li>

                        <li class="nav-item dropdown p-0 m-0 d-flex align-items-center text-white">
                            <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @AccountModel.UserEmail
                            </a>
                            <div class="dropdown-menu bg-dark m-0 mt-2 p-0" style="width: 250px">
                                <AccountComponent AccountModel="AccountModel"></AccountComponent>
                            </div>
                        </li>
                    }
                    
                </ul>
            </div>
            
        </div>
    </div>
</nav>

@code {
    [Parameter]
    public Action? action { get; set; }

    [Parameter]
    public AccountModel? AccountModel { get; set; }

}
